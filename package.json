{
  "name": "cleanc",
  "version": "1.0.0",
  "description": "简单易用的C盘清理与优化工具，专为电脑初学者设计",
  "main": "main.js",
  "scripts": {
    "start": "npx electron .",
    "build": "electron-builder --win",
    "test": "jest",
    "test:main": "jest --testMatch=\"**/tests/main/**/*.test.js\"",
    "test:renderer": "jest --testMatch=\"**/tests/renderer/**/*.test.js\"",
    "test:e2e": "jest --testMatch=\"**/tests/e2e/**/*.test.js\"",
    "test-startup": "mocha tests/startup-test-fixed.js",
    "test-startup-integration": "mocha tests/startup-integration-test.js",
    "package-secure": "cmd /c package-secure.bat"
  },
  "keywords": [
    "disk cleaner",
    "c drive",
    "optimizer",
    "beginner friendly"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^28.3.3",
    "electron-builder": "^24.9.1",
    "electron-mock-ipc": "^0.3.12",
    "javascript-obfuscator": "^4.1.1",
    "jest": "^29.7.0",
    "jest-mock-extended": "^3.0.5",
    "mocha": "^11.2.2",
    "mock-fs": "^5.2.0",
    "spectron": "^19.0.0"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.4.2",
    "chart.js": "^4.4.0",
    "node-disk-info": "^1.3.0",
    "winreg": "^1.2.5"
  },
  "build": {
    "appId": "com.cleanc.app",
    "productName": "CleanC",
    "win": {
      "target": "nsis",
      "icon": "assets/icon.svg"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "transform": {},
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "coverageDirectory": "./coverage",
    "setupFiles": [
      "./tests/setup.js"
    ]
  }
}
