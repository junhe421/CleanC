{
  "name": "cleanc",
  "version": "1.0.0",
  "description": "简单易用的C盘清理与优化工具，专为电脑初学者设计",
  "main": "main.js",
  "scripts": {
    "start": "npx electron .",
    "pack": "electron-builder --dir",
    "build": "electron-builder --win",
    "build:installer": "electron-builder --win --x64 --ia32",
    "test": "jest",
    "test:main": "jest --testMatch=\"**/tests/main/**/*.test.js\"",
    "test:renderer": "jest --testMatch=\"**/tests/renderer/**/*.test.js\"",
    "test:e2e": "jest --testMatch=\"**/tests/e2e/**/*.test.js\"",
    "test-startup": "mocha tests/startup-test-fixed.js",
    "test-startup-integration": "mocha tests/startup-integration-test.js"
  },
  "keywords": [
    "disk cleaner",
    "c drive",
    "optimizer",
    "beginner friendly"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^28.3.3",
    "electron-builder": "^24.9.1",
    "electron-mock-ipc": "^0.3.12",
    "jest": "^29.7.0",
    "jest-mock-extended": "^3.0.5",
    "mocha": "^11.2.2",
    "mock-fs": "^5.2.0",
    "spectron": "^19.0.0"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.4.2",
    "chart.js": "^4.4.0",
    "node-disk-info": "^1.3.0",
    "winreg": "^1.2.5"
  },
  "build": {
    "appId": "com.cleanc.app",
    "productName": "CleanC",
    "copyright": "© 2025 Next Wave",
    "asar": true,
    "compression": "maximum",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{.travis,.github,appveyor,.gitlab-ci,circle,codecov,.codeclimate}.yml",
      "!**/{.yarn-integrity,.yarn-metadata.json,yarn-error.log,yarn.lock,package-lock.json,npm-debug.log}",
      "!**/tests/**/*",
      "!**/temp/**/*"
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        }
      ],
      "icon": "assets/icon.svg",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "CleanC 清理助手",
      "installerIcon": "assets/icon.svg",
      "uninstallerIcon": "assets/icon.svg",
      "installerHeaderIcon": "assets/icon.svg",
      "license": "LICENSE.txt"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "transform": {},
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "coverageDirectory": "./coverage",
    "setupFiles": [
      "./tests/setup.js"
    ]
  }
}
